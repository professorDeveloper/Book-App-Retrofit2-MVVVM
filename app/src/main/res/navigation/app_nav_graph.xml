<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.azamovhudstc.bookappwithretrofit2.ui.fragment.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_introFragment"
            app:destination="@id/introFragment" />
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/introFragment"
        android:name="com.azamovhudstc.bookappwithretrofit2.ui.fragment.IntroFragment"
        android:label="fragment_intro"
        tools:layout="@layout/fragment_intro" >
        <action
            android:id="@+id/action_introFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.azamovhudstc.bookappwithretrofit2.ui.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_veriyFragment"
            app:destination="@id/veriyFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.azamovhudstc.bookappwithretrofit2.ui.fragment.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_veriyFragment"
            app:destination="@id/veriyFragment" />
    </fragment>
    <fragment
        android:id="@+id/veriyFragment"
        android:name="com.azamovhudstc.bookappwithretrofit2.ui.fragment.VerifyFragment"
        android:label="fragment_veriy"
        tools:layout="@layout/fragment_veriy" >
        <action
            android:id="@+id/action_veriyFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.azamovhudstc.bookappwithretrofit2.ui.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_addBookFragment"
            app:destination="@id/addBookFragment" />
    </fragment>
    <fragment
        android:id="@+id/addBookFragment"
        android:name="com.azamovhudstc.bookappwithretrofit2.ui.fragment.AddBookFragment"
        android:label="fragment_add_book"
        tools:layout="@layout/fragment_add_book" >
        <action
            android:id="@+id/action_addBookFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/editFragment"
        android:name="com.azamovhudstc.bookappwithretrofit2.ui.fragment.EditFragment"
        android:label="EditFragment" />
    <fragment
        android:id="@+id/showBookFragment"
        android:name="com.azamovhudstc.bookappwithretrofit2.ui.fragment.ShowBookFragment"
        android:label="fragment_show_book"
        tools:layout="@layout/fragment_show_book" />
</navigation>